@model LendViewModel

<div class="row orderForm">

    <form asp-controller="Lend" asp-action="LendBook" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Взять книгу</h3>
        @Html.HiddenFor(m => Model.Book.BookId)
        <div class="form-group">
            <label asp-for="Book.Borrower" class="col-md-2 control-label">Посетитель</label>
            <div class="col-md-6">
                @Html.DropDownListFor(m => m.Book.BorrowerId,
                                                    new SelectList(Model.Customers.Select(x => new { Value = x.CustomerId, Text = $"{x.Name} {x.LastName}" }), "Value", "Text"),
                                                    "Выбрать посетителя", htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Вернуться" asp-controller="Lend" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Взять книгу" />
            </div>
        </div>
    </form>
</div>