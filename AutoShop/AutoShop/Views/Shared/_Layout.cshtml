<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="#">Покупай автомобиль!</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Главная<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cars/List">Автомобили</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cars/List/Electro">Электромобили</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cars/List/Fuel">Топливные автомобилии</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AutoShopCart" asp-action="Index">Корзина</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        @RenderBody()
    </div>

    <footer class="footer mt-auto py-3">
        <div class="container">
            <span class="text-muted">© 2020</span>
        </div>
    </footer>

    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
